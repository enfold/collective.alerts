<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.alerts">

    <configlet
        title="Alerts settings"
        action_id="collective.alerts.settings"
        appId="collective.alerts"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@alerts-controlpanel"
        icon_expr="string:exclamation-triangle"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
