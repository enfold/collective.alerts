<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="user" meta_type="CMF Action Category">
  <object name="alert_msg" meta_type="CMF Action"
     i18n:domain="collective.alerts">
   <property name="title" i18n:translate="">Set alert message</property>
   <property name="description" i18n:translate=""></property>
   <property
      name="url_expr">string:${globals_view/navigationRootUrl}/@@set-alert-message</property>
   <property name="link_target"></property>
   <property name="icon_expr">string:exclamation-triangle</property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="collective.alerts: Can set alert message"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
